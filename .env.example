# Application Settings
APP_NAME=AI Agent Platform
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# LLM API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GROQ_API_KEY=your-groq-api-key

# LLM Model Configuration
CLAUDE_MODEL=claude-3-5-sonnet-20241022
GPT4_MODEL=gpt-4-turbo-preview
GROQ_MODEL=llama-3.1-70b-versatile

# Mem0 Configuration
MEM0_API_KEY=your-mem0-api-key
MEM0_BASE_URL=https://api.mem0.ai

# Composio Configuration
COMPOSIO_API_KEY=your-composio-api-key

# RealEstateAPI Configuration
REALESTATE_API_KEY=your-realestate-api-key
REALESTATE_BASE_URL=https://api.realestateapi.com

# MediaMagic API Configuration (Media processing and management)
MEDIAMAGIC_API_URL=http://localhost:8001
MEDIAMAGIC_API_KEY=your-mediamagic-api-key

# Go Services Configuration (Microservices)
GO_SERVICES_URL=http://localhost:8002
GO_SERVICES_API_KEY=your-go-services-api-key

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8003
MCP_ENABLE_REMOTE=True

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_agent_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_agent_platform

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_MAX_CONNECTIONS=100

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Retry Configuration
MAX_RETRIES=3
RETRY_BACKOFF_FACTOR=2
RETRY_TIMEOUT=30

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Caching
CACHE_TTL=3600
CACHE_ENABLED=True

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=True
